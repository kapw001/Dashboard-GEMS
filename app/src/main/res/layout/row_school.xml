<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5ssp"
    android:background="@drawable/roundrect"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_5ssp"
    android:paddingLeft="@dimen/_5ssp"
    android:paddingRight="@dimen/_5ssp"
    android:paddingTop="@dimen/_5ssp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Government boys higher scondary school"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/flag"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:layout_gravity="end"
            android:src="@mipmap/ic_usaflag"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>