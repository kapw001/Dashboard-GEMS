<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundcolor"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_5ssp"
            app:cardElevation="2dp"
            app:contentPadding="@dimen/_5ssp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5ssp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Revenue for the year 2017"
                    android:textSize="@dimen/_14ssp"
                    app:font="@{`Geneva.ttf`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:background="@color/backgroundcolor"
                    android:visibility="gone"></View>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/idPieChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_5ssp"
            app:cardElevation="2dp"
            app:contentPadding="@dimen/_5ssp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:padding="@dimen/_5ssp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Total Schools"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8ssp"
                            app:font="@{`Geneva.ttf`}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2ssp"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="42"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            app:font="@{`Geneva.ttf`}" />
                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5ssp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Total Revenue"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8ssp"
                            app:font="@{`Geneva.ttf`}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2ssp"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="86"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            app:font="@{`Geneva.ttf`}" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/_2ssp"
                        android:layout_marginRight="@dimen/_5ssp"
                        android:gravity="center"
                        android:text="*Current year"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_5ssp"
                        android:textStyle="normal"
                        app:font="@{`Geneva.ttf`}" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:padding="@dimen/_5ssp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Revenue Growth"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8ssp"
                            app:font="@{`Geneva.ttf`}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2ssp"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_16ssp"
                                android:layout_height="@dimen/_16ssp"
                                android:src="@drawable/ic_arrow_upward_black_24dp"
                                android:tint="@android:color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="20%"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold"
                                app:font="@{`Geneva.ttf`}" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="-  35%"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/card2"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_5ssp"
            app:cardElevation="2dp"
            app:contentPadding="@dimen/_5ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Yearly Revenue "
                    android:textAllCaps="false"
                    android:textSize="@dimen/_14ssp"
                    app:font="@{`Geneva.ttf`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:background="@color/backgroundcolor"
                    android:visibility="gone"></View>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_10ssp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>
</layout>